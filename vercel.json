{
  "version": 2,
  "builds": [
    {
      "src": "ticketsafer-site/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "ticketsafer-site/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_WS_PROTOCOL": "wss",
    "VITE_WS_HOST": "ticket-safer.vercel.app"
  },
  "github": {
    "enabled": true
  }
} 